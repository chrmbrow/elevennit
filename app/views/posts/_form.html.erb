<%= form_for @post do |f| %>
  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </fieldset>

  <fieldset>
  <% if f.object.link? %>
    <%= f.label :link %>
    <%= f.text_field :link %>
  <% else %>
    <%= f.label :body %>
    <%= f.text_area :body %>
  <% end %>
  </fieldset>

  <%= f.hidden_field :post_type %>

  <%= f.submit class: 'btn btn-default' %>
<% end %>
