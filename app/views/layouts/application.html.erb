<!DOCTYPE html>
<html>
<head>
  <title>Elevennit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container wrap">
    <div class="row">
      <div class="col-xs-12">
        <header>
          <%= link_to("Elevennit", root_path) %>
        </header>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-8">
          <main>
            <% flash.each do |k, v| %>
              <% if v.is_a?(Array) %>
                <%= content_tag :div, class: v do %>
                  <ul>
                    <% v.each do |msg| %>
                      <%= content_tag :div, msg, class: k %>
                    <% end %>
                  </ul>
                <% end %>
              <% else %>
                <%= content_tag :div, v, class: k %>
              <% end %>
            <% end %>
            <!-- BEGIN main content -->
            <%= yield %>
            <!-- END main content -->
          </main>
        </div>
        <div class="col-xs-4">
          <nav id="sidebar">
            <%= link_to('New Post', new_post_path) %>
          </nav>
        </div>
      </div>
    </div>
    <div class="push"></div>
  </div>

  <footer>
    Use of this site constitutes acceptance of the <a 47 href="http://dresdenfiles.wikia.com/wiki/Unseelie_Accords">Unseelie Accords</a>.
  </footer>
</body>
</html>
